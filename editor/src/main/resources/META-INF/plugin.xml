<idea-plugin>
    <id>org.rewedigital.konversation.editor</id>
    <name>Editor and extensions for Konversation files</name>
    <vendor email="opensource@rewe-digital.com" url="https://www.rewe-digital.com">REWE Digital GmbH</vendor>

    <description><![CDATA[
    TODO
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileTypeFactory implementation="org.rewedigital.konversation.editor.KonversationFileTypeFactory"/>
        <lang.parserDefinition language="Konversation" implementationClass="org.rewedigital.konversation.editor.KonversationParserDefinition"/>
        <colorSettingsPage implementation="org.rewedigital.konversation.editor.KonversationColorSettingsPage"/>
        <annotator language="JAVA" implementationClass="org.rewedigital.konversation.editor.KonversationAnnotator"/>
        <annotator language="kotlin" implementationClass="org.rewedigital.konversation.editor.KonversationAnnotator"/>
        <annotator language="Konversation" implementationClass="org.rewedigital.konversation.editor.KonversationAnnotator"/>
        <psi.referenceContributor implementation="org.rewedigital.konversation.editor.KonversationReferenceContributor"/>
        <lang.refactoringSupport language="JAVA" implementationClass="org.rewedigital.konversation.editor.KonversationRefactoringSupportProvider"/>
        <lang.refactoringSupport language="kotlin" implementationClass="org.rewedigital.konversation.editor.KonversationRefactoringSupportProvider"/>
        <lang.refactoringSupport language="Konversation" implementationClass="org.rewedigital.konversation.editor.KonversationRefactoringSupportProvider"/>
        <completion.contributor language="JAVA" implementationClass="org.rewedigital.konversation.editor.KonversationCompletionContributor"/>
        <completion.contributor language="kotlin" implementationClass="org.rewedigital.konversation.editor.KonversationCompletionContributor"/>
        <completion.contributor language="Konversation" implementationClass="org.rewedigital.konversation.editor.KonversationCompletionContributor"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="MyPlugin.SampleMenu" text="Greeting" description="Greeting menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes" class="org.rewedigital.konversation.editor.HelloAction" text="Hello" description="Says hello"/>
        </group>
    </actions>
</idea-plugin>